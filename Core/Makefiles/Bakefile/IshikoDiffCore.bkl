toolsets = vs2017 vs2015 vs2013;

vs2017.solutionfile = ../VC15/IshikoDiffCore.sln;
vs2015.solutionfile = ../VC14/IshikoDiffCore.sln;
vs2013.solutionfile = ../VC12/IshikoDiffCore.sln;

library IshikoDiffCore
{
    archs = x86 x86_64;

    includedirs += ../../../Include/Ishiko/Diff/Core;

    outputdir = ../../../Lib/$(arch);

    if ($(config) == Debug)
    {
        basename = IshikoDiffCore-d;
    }

    headers
    {
        ../../../Include/Ishiko/Diff/Core/linkoptions.h
    }
}
